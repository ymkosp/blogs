<% provide(:title, @user.name) %>
<div class="row">
	<aside class="span4">
	<section>
	<h1>
		<!--%= gravatar_for @user %-->
		<%= @user.name %>&nbsp;&nbsp;&nbsp;&nbsp;
		<%= @user.email %>
	</h1>
	</section>
	</aside>

	<div class="span8">
		<%= render 'follow_form' if signed_in? %>
		<% if @user.microposts.any? %>
			<h3>Posts (<%= @user.microposts.count %>)</h3>
			<%= will_paginate @microposts %>
			<ol class="microposts">
				<%= render @microposts %>
			</ol>
			<%= will_paginate @microposts %>
		<% end %>
	</div>
</div>

